/* 头 */
.ETSC-head {background-color: #fff;}
.ETSC-head .head-small-txt {
    font-size: 80%;
    color: #333;
}
.ETSC-head .head-big-txt {
    line-height: 35px;
    /*font-size: 110%;*/
    color: #333;
    vertical-align: middle;
}
.ETSC-head h1 {
    color: #fff;
}
/* 搜索 */
.ETSC-search-collapse input,
.ETSC-search-collapse a{
    margin-bottom: 0;
}

/* 主页四块面板 */
.ETSC-main-panel {
    border: 1px solid #D8D8D8;
    padding: 0 3px;
    background-color: #F2F2F2;
}
.ETSC-main-panel h3 {
    background: none repeat scroll 0 0 #575B5E;
    color: #FFFFFF;
    font-weight: bold;
    height: 36px;
    line-height: 36px;
    padding-left: 18px;
    font-size: .8em;
}
/** 多层UL 及 单层 UL **/
.ETSC-tree-ul *,
.ETSC-flat-ul *{
    list-style-type: none;
    font-size: .8em;
    line-height: 2em;
    font-weight: bold;
}
.ETSC-tree-ul a{
    color: #333;
}
.ETSC-tree-ul ul a,
.ETSC-flat-ul a{
    font-weight: normal;
    color: #666;
}
/** TAB签 **/
.ETSC-main-panel .tabs {
    padding-left: 1em;
}
.ETSC-main-panel .tabs a {
    font-size: .8em;
    padding: .5em 1.5em;
    background-color: #CCC;
}
.ETSC-main-panel .tabs .active a {
    background-color: #88C;
    color: #FFFFFF;
}

/** 解决方案 **/
.ETSC-solution *{
    font-size: .8em;
    color: #666;
}
.ETSC-solution h4 {
    font-weight: bold;
    color: #333;
}
.ETSC-solution a{
    color: #666;
}

/** 合作伙伴LOGO **/
.ETSC-main-panel ul li ul .th {
    text-align: center;padding: 8px 0;
    background-color: #f2f2f2;
}
.ETSC-main-panel .th a {
    border: 4px solid #FFFFFF;
    box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.2);
    display: inline-block;max-width: 100%;
}
