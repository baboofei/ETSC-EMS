/* 头 */
.ETSC-head {background-color: #fff;}
.ETSC-head .head-small-txt {
    font-size: 80%;
    color: #333;
}
.ETSC-head .head-big-txt {
    line-height: 35px;
    /*font-size: 110%;*/
    color: #333;
    vertical-align: middle;
}
.ETSC-head h1 {
    color: #fff;
}
/* 搜索 */
.ETSC-search-collapse input,
.ETSC-search-collapse a{
    margin-bottom: 0;
}

/* 主页四块面板 */
.ETSC-main-panel {
    border: 1px solid #D8D8D8;
    padding: 0 3px;
    background-color: #F2F2F2;
}
.ETSC-main-panel h3 {
    background: none repeat scroll 0 0 #575B5E;
    color: #FFFFFF;
    font-weight: bold;
    height: 36px;
    line-height: 36px;
    padding-left: 18px;
    font-size: .8rem;
}
/** 多层UL 及 单层 UL **/
.ETSC-tree-ul *,
.ETSC-flat-ul *{
    list-style-type: none;
    font-size: .8rem;
    line-height: 2rem;
    font-weight: bold;
}
.ETSC-tree-ul a{
    color: #333;
}
.ETSC-tree-ul ul a,
.ETSC-flat-ul a{
    font-weight: normal;
    color: #666;
}
/** TAB签 **/
.ETSC-main-panel .tabs {
    padding-left: 1rem;
}
.ETSC-main-panel .tabs a {
    font-size: .8rem;
    padding: .5rem 1.5rem;
    background-color: #CCC;
}
.ETSC-main-panel .tabs .active a {
    background-color: #88C;
    color: #FFFFFF;
}

/** 解决方案 **/
.ETSC-solution *{
    font-size: .8rem;
    color: #666;
}
.ETSC-solution h4 {
    font-weight: bold;
    color: #333;
}
.ETSC-solution a{
    color: #666;
}

/** 合作伙伴LOGO **/
.ETSC-main-panel ul li ul .th {
    text-align: center;
    padding: 8px 0;
    background-color: #f2f2f2;
}
.ETSC-main-panel .th a,
.ETSC-recommend-panel .th a {
    border: 4px solid #FFFFFF;
    box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.2);
    display: inline-block;
    max-width: 100%;
}
.ETSC-recommend-panel .th a {
    border: 0 solid #FFFFFF;
    box-shadow: 0 0 0 0 rgba(0, 0, 0, 0.2);
    max-width: 100%;
}

/* 推荐产品滚动 */
.ETSC-recommend-panel ul li {
    text-align: center;
}
.ETSC-recommend-panel ul li ul .th {
    padding: 4px 10px;
    background-color: #FFF;
}
.ETSC-recommend-panel h3 {
    background: none repeat scroll 0 0 #575B5E;
    color: #FFFFFF;
    font-weight: bold;
    height: 36px;
    line-height: 36px;
    padding-left: 18px;
    margin: 0;
    font-size: .8rem;
}

/* 友情链接 */
.ETSC-link-panel h3 {
    /*height: 36px;*/
    /*line-height: 36px;*/
    padding-left: 10px;
    font-size: .9rem;
}
.ETSC-link-panel div {
    font-family: Arial,Helvetica,sans-serif;
    color: #333333;
    background-color: #FFFFFF;
    border: 1px solid #D9D9D9;
    border-radius: 2px;
    box-shadow: rgba(0, 0, 0, 0.07) 1px 1px 1px 0px;
    padding: 0;
}
.ETSC-link-panel ul {
    margin-left: 0px;
    margin-bottom: 0px;
    text-align: center;
}
.ETSC-link-panel .th {
    /*border: 0;*/
    box-shadow: 0 0 0 0 rgba(0, 0, 0, 0.2);
}

/* 尾巴 */
.ETSC-footer {
    background: none repeat scroll 0 0 #575B5E;
    padding: 15px 0;
}
.ETSC-footer p {
    font-size: 0.8rem;
    color: #FFF;
    text-align: center;
    margin-bottom: 0.5rem;
}